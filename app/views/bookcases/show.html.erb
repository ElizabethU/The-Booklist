<h1><%= link_to @bookcase.user.name, @bookcase.user %>'s <%= @bookcase.name %></h1>
<p>Book count: <%= @bookcase.books.count %></p>
  <table>
  <% @bookcase.books.each do |book| %>
  <tr>
    <td>
      <div class="cover_picture">
        <img src=<%= book.image_link %> >
      </div>
    </td>
    <td>
      <div class="book_info">
        <h3><%= book.title %></h3>
        <p>by <%= book.authors %></p>
        <p>published <%= book.published_date %></p>
        <p><%= book.description %></p>
      </div>
    <% if current_user%>
      <% if @bookcase.name == "Wishlist" %>
        <%= button_to "Move to Completed Books", move_bookcase_book_path(@bookcase.id, book.id), :method => :patch %>
      <% end %>
      <%= button_to "Remove Book from Bookcase", delete_bookcase_book_path(@bookcase.id, book.id), :method => :delete %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>